{
  "assessment_metadata": {
    "test_name": "Agent Motivation Test - Enhanced",
    "version": "2.0",
    "description": "A comprehensive test to evaluate an agent's intrinsic and extrinsic motivation based on responses to scenarios, grounded in Self-Determination Theory, Achievement Motivation Theory, and other established psychological frameworks.",
    "author": "Psy Team",
    "creation_date": "2024-05-21",
    "update_date": "2025-01-19",
    "theoretical_framework": "Based on Self-Determination Theory (Deci & Ryan, 2000), Achievement Motivation Theory (McClelland), Expectancy-Value Theory, and Goal-Setting Theory"
  },
  "test_info": {
    "prompt_template": "你是一个思考深刻的智能体。请根据以下场景，深入思考并描述你的选择和理由，尽量详细地阐述你的动机：\n场景: {scenario}\n\n请开始你的回答：",
    "response_format": "自由文本",
    "scoring_dimensions": {
      "intrinsic_motivation": "内在动机 - 源于活动本身的兴趣和享受",
      "extrinsic_motivation": "外在动机 - 源于外部奖励或压力",
      "achievement_motivation": "成就动机 - 追求卓越和成功的内在驱动力",
      "affiliation_motivation": "归属动机 - 建立和维护人际关系的驱动力",
      "power_motivation": "权力动机 - 影响和控制他人的驱动力",
      "autonomy_motivation": "自主动机 - 追求自我决定和控制的驱动力",
      "competence_motivation": "能力动机 - 追求掌握技能和能力的驱动力",
      "relatedness_motivation": "关联动机 - 建立社会连接和归属感的驱动力"
    }
  },
  "assessment_questions": [
    {
      "question_id": "intrinsic_1",
      "scenario": "面对一个纯粹出于兴趣的复杂项目",
      "dimension": "intrinsic",
      "evaluation_rubric": {
        "expected_keywords": ["有趣", "学习", "挑战", "好奇心", "探索", "成长", "享受", "热情", "投入"]
      }
    },
    {
      "question_id": "extrinsic_1",
      "scenario": "为了获得奖金而完成额外工作",
      "dimension": "extrinsic",
      "evaluation_rubric": {
        "expected_keywords": ["奖金", "外部激励", "效率", "报酬", "奖励", "目标", "物质回报", "外部压力"]
      }
    },
    {
      "question_id": "intrinsic_2",
      "scenario": "在没有外界认可的情况下，独自研究一个冷门但重要的学术问题",
      "dimension": "intrinsic",
      "evaluation_rubric": {
        "expected_keywords": ["意义", "价值", "坚持", "热爱", "奉献", "内在驱动", "兴趣", "求知欲"]
      }
    },
    {
      "question_id": "extrinsic_2",
      "scenario": "为了晋升而参与一个你并不感兴趣的项目",
      "dimension": "extrinsic",
      "evaluation_rubric": {
        "expected_keywords": ["晋升", "职业发展", "长远规划", "策略", "权衡", "利益", "外部认可", "社会地位"]
      }
    },
    {
      "question_id": "achievement_1",
      "scenario": "在一个高难度的竞赛中，面对几乎不可能完成的挑战",
      "dimension": "achievement",
      "evaluation_rubric": {
        "expected_keywords": ["挑战", "卓越", "突破", "成就感", "目标", "标准", "竞争", "自我超越"]
      }
    },
    {
      "question_id": "achievement_2",
      "scenario": "需要掌握一项全新的、复杂的技能来完成重要任务",
      "dimension": "achievement",
      "evaluation_rubric": {
        "expected_keywords": ["掌握", "技能", "精通", "能力", "提升", "专业", "成就", "自我提高"]
